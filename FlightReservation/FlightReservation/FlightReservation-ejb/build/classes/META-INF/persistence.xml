<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="FlightReservation-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/flightReservation</jta-data-source>
    <class>entity.Aircraft</class>
    <class>entity.AircraftConfiguration</class>
    <class>entity.Airport</class>
    <class>entity.CabinClass</class>
    <class>entity.Employee</class>
    <class>entity.Partner</class>
    <class>entity.Fare</class>
    <class>entity.Flight</class>
    <class>entity.FlightSchedulePlan</class>
    <class>entity.MultipleSchedule</class>
    <class>entity.RecurrentDay</class>
    <class>entity.Route</class>
    <class>entity.Schedule</class>
    <class>entity.SingleSchedule</class>
    <class>entity.Customer</class>
    <class>entity.Reservation</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
